<h1>Register Your Shop</h1>

<%= form_with model: @shop, local: true do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>
      <ul>
        <% @shop.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Shop Name" %><br>
    <%= f.text_field :name %>
  </div>

  <%= f.hidden_field :owner_id, value: params[:owner_id] %>

  <div class="actions">
    <%= f.submit "Create Shop" %>
  </div>
<% end %>

