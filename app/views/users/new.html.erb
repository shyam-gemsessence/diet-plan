<%= form_with model: @user, html: { class: "user-form" } do |f| %>

  <div class="form-group">
    <%= f.label :role, class: "form-label" %>
    <%= f.select :role, [@user.role], {}, class: "form-select" %>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Register", class: "form-submit-btn" %>
  </div>

<% end %>
